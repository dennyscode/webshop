<div class="row comments_section">
  <h2 class="col-12">Comments Section</h2>
  <div class="col-xs-12 col-lg-4">
    <%= render 'comments/form' %>
  </div><!-- end /col-->
  <div class="col-xs-12 col-lg-8">
    <div class="row">
      <h2 class="col-12">Comments</h2>
      <div class="col-3">
        <p>"<%= @product.highest_rating_comment.body %>"</p>
      </div>
      <div class="col-6">
        <%= render 'comments/comments' %>
      </div>
      <div class="col-3">
        <p>Testing lowest_rating_comment:
          "<%= @product.lowest_rating_comment.body %>" with a rating of <%= @product.lowest_rating_comment.rating %> Points!</p>
      </div>
    </div><!-- end /row -->
  </div><!-- end /col-->
</div><!-- /end row-->
