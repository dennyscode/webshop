
<%= form_for(resource, as: resource_name, class: "row log_form", url: session_path(resource_name)) do |f| %>
  <h2>Log in</h2>
  <div class="form-group col-8">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="form-group col-8">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-check col-8">
      <%= f.check_box :remember_me, type:"checkbox", class:"form-check-input col-4", id:"exampleCheck1" %>
      <%= f.label :remember_me, class:"form-check-label col-8", for:"exampleCheck1" %>
    </div>
  <% end -%>

  <div class="actions col-8">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
