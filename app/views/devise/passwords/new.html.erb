
<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "row form_frame", html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <h2>Forgot your password?</h2>
  <div class="form-group col-8">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="actions col-8">
    <%= f.submit "Send me reset password instructions", class: "col-12 btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
