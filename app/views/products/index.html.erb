<div class="frame">
  <div class="row">
    <div class="col-12 header">
      <h2>Products
    </div><!-- /end header-->
    <% cache(cache_key_for_products) do %>
      <% @products.each do |product| %>
        <%= render partial: 'products', locals: {product: product} %>
      <% end %>
    <% end %>
    <br>
  </div><!-- /end row-->
  <br>
  <div class="col-12 button_row">
    <%= link_to 'New Product', new_product_path, class:"btn product_card_btn" %>
  </div><!--/end col-->
</div><!-- /end frame-->
<br>
