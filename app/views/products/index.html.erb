<div class="frame">
  <div class="row">
    <div class="col-12 header">
      <%# your_ruby_code %>

      <h2>Products
    </div><!-- /end header-->
    <% @products.each do |product| %>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <div class="product_frame">
          <h2><%= product.name %></h2>
          <p><%= product.description %></p>
          <p><%= product.colour %></p>
          <p><%= product.prize %>â‚¬</p>
          <p><%= product.quantity %> (quantity)</p>
          <%= if product.image_url === nil
                image_tag("https://cdn3.iconfinder.com/data/icons/school-icons-3/512/Block-512.png", class: "d-block w-100", :class => "product_frame product_image")
              else
                image_tag("#{product.image_url}", class: "d-block w-100 product_image")
              end %>
          <p><%= product.image_url %></p>
          <p><a class="url_image" href="<%= product.image_url %>" target="_blank">Go to Image-Source</a></p>
          <td><%= link_to 'Show', product, class: "btn btn-outline-primary", style: "margin-bottom: 2em"  %></td>
          <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-outline-warning", style: "margin-bottom: 2em" %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger", style: "margin-bottom: 2em"  %></td>
        </div>
      </div><!-- /end product_frame-->
    <% end %>
    <br>
  </div><!-- /end row-->
  <br>


    <div class="col-xs-4 button_row">
      <%= link_to 'New Product', new_product_path, class:"btn btn-outline-dark" %>
    </div><!--/end col-->
    <div class="col-xs-4 button_row">
      <%= link_to 'View Items', new_product_path, class:"btn btn-outline-dark" %>
    </div><!--/end col-->
</div><!-- /end frame-->
<br>
<div class="row">
  <div class="col-12 ruby_code">
    <% paragraph_number = 1 %>
    <% 5.times do %>
      <p>This is paragraph number <%= paragraph_number %></p>
      <% paragraph_number = paragraph_number + 1 %>
    <% end %>
  </div><!-- /end row-->
</div><!-- /end frame-->
