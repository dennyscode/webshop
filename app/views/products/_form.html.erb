<%= form_with(model: product, local: true, class: "row form_frame") do |form| %>
  <% if product.errors.any? %>
    <div class="form-group col-8">
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group col-8">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group col-8">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group col-8">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, class: "form-control" %>
  </div>

  <div class="form-group col-8">
    <%= form.label :colour %><br>
    <%= form.text_field :colour, class: "form-control" %>
  </div>

  <div class="form-group col-8">
    <%= form.label :prize %><br>
    <%= form.text_field :prize, class: "form-control" %>
  </div>

  <div class="form-group col-8">
    <%= form.label :quantity %><br>
    <%= form.text_field :quantity, class: "form-control" %>
  </div>

  <div class="actions col-8">
    <%= form.submit class: "col-12 btn nav-link algn_center" %>
  </div>
<% end %>
