<p id="notice"><%= notice %></p>

<div class= "frame">
  <div class="row">
    <div class="col-sm-12 col-lg-2">
      <p>
        <div class="col-12 header">
          <strong>Name:</strong>
        </div><!-- /end col-->
        <div class="col-12 name">
          <h2><%= @product.name %></h2>
        </div>
      </p>
    </div><!-- /end col-->

    <div class="col-sm-12 col-lg-2">
    <p>
      <div class="col-12 header">
        <strong>Description:</strong>
      </div><!-- /end col-->
      <div class="col-12 descr">
        <%= @product.description %>
      </div>
    </p>
    </div><!-- /end col-->

    <div class="col-sm-12 col-lg-2">
    <p>
      <div class="col-12 header">
        <strong>Color:</strong>
      </div><!-- /end col-->
      <div class="col-12 descr">
        <%= @product.colour %>
      </div>
    </p>
    </div><!-- /end col-->

    <div class="col-sm-12 col-lg-2">
      <p>
        <div class="col-12 header">
          <strong>Quantity:</strong>
        </div><!-- /end col-->
        <div class="col-12 descr">
          <%= @product.quantity %>
        </div>
      </p>
    </div><!-- /end col-->

    <div class="col-sm-12 col-lg-4">
      <p>
        <div class="col-12 header">
          <strong>Image url:</strong>
        </div><!-- /end col-->
        <div class="col-12">
          <%= link_to "Click here to jump to Image directory", @product.image_url, class: "descr" %>
        </div>
      </p>
    </div><!-- /end col-->

    <div class="col-12">
      <%= image_tag(@product.image_url, class: "d-block w-100", :class => "product_frame" ) %>
    </div><!-- /end col-->


    <div class="col-sm-12">
      <p>
        <div class="col-12 header">
          <strong>Prize:</strong>
        </div><!-- /end col-->
        <div class="col-12 prize">
          <%= @product.prize %>â‚¬
        </div>
      </p>
      <p>Testing highest_rating_comment:
        "<%= @product.highest_rating_comment.body %>" by <%= @product.highest_rating_comment.commenter %> with a rating of <%= @product.highest_rating_comment.rating %> Points!</p>
      <p>Testing lowest_rating_comment:
        "<%= @product.lowest_rating_comment.body %>" by <%= @product.lowest_rating_comment.commenter %> with a rating of <%= @product.lowest_rating_comment.rating %> Points!</p>
      <%= render 'comments/comments' %>
      <%= render 'comments/form' %>

    </div><!-- /end col-->

    <div class="col-2 button_row">
      <%= link_to 'Back', products_path, class:"btn btn-outline-dark" %>
    </div><!--/end col-->
    <div class="col-2">
      <%= link_to 'Edit', edit_product_path(@product), class:"btn btn-outline-dark"  %>
    </div><!-- /end col-->
  </div><!-- end row -->
</div><!-- end show_frame -->
