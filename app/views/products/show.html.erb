<p id="notice"><%= notice %></p>


<div class= "frame">
  <div class="row">
    <div class="col-sm-12 col-lg-2">
      <p>
        <div class="col-12 header">
          <strong>Name:</strong>
        </div><!-- /end col-->
        <div class="col-12 name">
          <h2><%= @product.name %></h2>
        </div>
      </p>
    </div><!-- /end col-->

    <div class="col-sm-12 col-lg-2">
    <p>
      <div class="col-12 header">
        <strong>Description:</strong>
      </div><!-- /end col-->
      <div class="col-12 descr">
        <%= @product.description %>
      </div>
    </p>
    </div><!-- /end col-->

    <div class="col-sm-12 col-lg-2">
    <p>
      <div class="col-12 header">
        <strong>Color:</strong>
      </div><!-- /end col-->
      <div class="col-12 descr">
        <%= @product.colour %>
      </div>
    </p>
    </div><!-- /end col-->

    <div class="col-sm-12 col-lg-2">
      <p>
        <div class="col-12 header">
          <strong>Quantity:</strong>
        </div><!-- /end col-->
        <div class="col-12 descr">
          <%= @product.quantity %>
        </div>
      </p>
    </div><!-- /end col-->

    <div class="col-sm-12 col-lg-4">
      <p>
        <div class="col-12 header">
          <strong>Image url:</strong>
        </div><!-- /end col-->
        <div class="col-12">
          <%= link_to "Click here to jump to Image directory", @product.image_url, class: "descr" %>
        </div>
      </p>
    </div><!-- /end col-->

    <div class="col-12">
      <%= image_tag(@product.image_url, width: "50%", data_zoom_image: "@product.product_image.url", class: "img-zoom d-block w-100 product_frame") %>
    </div><!-- /end col-->
    <div class="col-6">
      <%= image_tag(@product.image_url, width: "350", data_zoom_image: "@product.product_image.url", class: "img-zoom") %>
    </div>


    <div class="col-sm-12">
      <div class="col-12 header">
        <strong>Prize:</strong>
      </div><!-- /end col-->
      <div class="col-12 prize">
        <%= @product.prize %>â‚¬
      </div>
      <div class="col-12"
        <%= form_with(url: '/payments/create') do |form| %>
          <%= hidden_field_tag(:product_id, @product.id) %>
          <%= render partial: "shared/stripe_checkout_button" %>
        <% end %>
      </div>


      <div class="col-12">
        <div class="row">
          <div class="col-4">
            <%= render 'new_comment' %>
          </div>
          <div class="col-8">
            <%= render 'comments' %>
            <%= will_paginate @comments, renderer: BootstrapPagination::Rails %>
          </div>
          <div class="col-12">
            <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
          </div>
        </div>
      </div>
    </div><!-- /end col-->

    <div class="col-2 button_row">
      <%= link_to 'Back', products_path, class:"btn btn-outline-dark" %>
    </div><!--/end col-->
    <div class="col-2">
      <%= link_to 'Edit', edit_product_path(@product), class:"btn btn-outline-dark"  %>
    </div><!-- /end col-->
  </div><!-- end row -->
</div><!-- end show_frame -->
